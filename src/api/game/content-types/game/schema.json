{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "singularName": "game",
    "pluralName": "games",
    "displayName": "Game",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "coverBlur": {
      "type": "text"
    },
    "screenshots": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::screenshot.screenshot",
      "mappedBy": "game"
    }
  }
}
